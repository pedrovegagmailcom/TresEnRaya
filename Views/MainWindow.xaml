<Window x:Class="TresEnRaya.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TresEnRaya"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True" 
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines ="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label Content="{Binding NumeroNodos}"></Label>
        </StackPanel>
        
    <Grid ShowGridLines ="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding C1Command}"  Content="{Binding C1}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="0" Grid.Column="1" Command="{Binding C2Command}"  Content="{Binding C2}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding C3Command}"  Content="{Binding C3}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="1" Grid.Column="0" Command="{Binding C4Command}"  Content="{Binding C4}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="1" Grid.Column="1" Command="{Binding C5Command}"  Content="{Binding C5}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="1" Grid.Column="2" Command="{Binding C6Command}"  Content="{Binding C6}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="2" Grid.Column="0" Command="{Binding C7Command}"  Content="{Binding C7}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="2" Grid.Column="1" Command="{Binding C8Command}"  Content="{Binding C8}" FontSize="60" Background="Transparent"></Button>
            <Button Grid.Row="2" Grid.Column="2" Command="{Binding C9Command}"  Content="{Binding C9}" FontSize="60" Background="Transparent"></Button>
        </Grid>
    </Grid>
</Window>
